<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weather.Views.AboutPage"
             Title="About Weather">
    <AbsoluteLayout BackgroundColor="#37474F">
        <Image AbsoluteLayout.LayoutBounds="0.5,0.5,800,800" x:Name="myGif" Source="myGif"  />
        <StackLayout >
            <Frame  BackgroundColor="#37474F" FlowDirection="LeftToRight" Padding="24" CornerRadius="1">
                <Label Text="Welcome to my weather forecast!"  HorizontalTextAlignment="End" TextColor="#FFF" FontSize="36"/>

            </Frame>

            <Label Text="Created by Hanna Tekie" VerticalTextAlignment="End" FlowDirection="RightToLeft"  FontSize="Small" FontAttributes="Italic" TextColor="#FFF"/>

        </StackLayout>
    </AbsoluteLayout>
</ContentPage>